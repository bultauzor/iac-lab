[Unit]
Description=App

[Service]
User={{ app_user }}
WorkingDirectory={{ app_app_dir }}
Environment="DB={{ app_bdd_db }}"
Environment="DB_HOST={{ app_bdd_host }}"
ExecStart={{ app_venv_path }}/bin/python -m uvicorn main:app --host 0.0.0.0 --port {{ app_port }}

[Install]
WantedBy=multi-user.target
